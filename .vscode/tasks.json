{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "lint:knip",
			"label": "npm: lint:knip",
			"detail": "knip",
			"problemMatcher": {
				"owner": "tsc",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": [
					{
						"regexp": "^([^\\s].*) \\(\\d+\\)$",
						"message": 1
					},
					{
						"regexp": "([^ ]+) +([^ ]+) +([^:]+):(\\d+):(\\d+)",
						"file": 3,
						"line": 4,
						"column": 5,
						"loop": true
					}
				]
			}
		},
		{
			"type": "npm",
			"script": "lint:spelling",
			"problemMatcher": ["$markdownlint"],
			"label": "npm: lint:spelling",
			"detail": "cspell \"**\" \".github/**/*\""
		}
	]
}
